<Window x:Class="ExRegistryHive.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Content="LoadHive" Name="LoadHive" IsEnabled="{Binding LoadBTEnabled}" Width="80" Height="25" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" Click="LoadHive_Click" />
            <Button Content="GetReg" Name="GetReg" IsEnabled="{Binding GetBTEnabled}" Width="80" Height="25" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" Click="GetReg_Click" />
            <Button Content="UnLoadHive" Name="UnLoadHive" IsEnabled="{Binding UnLoadBTEnabled}" Width="80" Height="25" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" Click="UnLoadHive_Click" />
        </StackPanel>
        <Border Margin="5,45,5,5" BorderBrush="Black" BorderThickness="1">
            <TextBlock Text="{Binding ResultText}" Margin="5" />
        </Border>
    </Grid>
</Window>
